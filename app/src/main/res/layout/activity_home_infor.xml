<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/cart_ly"
    tools:context=".view.login.home.HomeInforActivity">
      <android.support.v7.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:id="@+id/home_infor_ry"
          >

      </android.support.v7.widget.RecyclerView>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:orientation="horizontal"
          >
              <ImageView
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  android:background="@drawable/bar_more_normal"
                  />

              <ImageView
                android:layout_width="80dp"
                  android:id="@+id/home_infor_cart"
                android:layout_height="match_parent"
                  android:background="@drawable/bar_shopping_normal"
              />
               <Button
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="立即购买"
                   android:background="#FFFFFF"
                   />
            <Button
                android:id="@+id/home_infor_insert"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="加入购物车"
                android:background="@color/price"
                android:textColor="#FFFFFF"
                />




      </LinearLayout>

</LinearLayout>