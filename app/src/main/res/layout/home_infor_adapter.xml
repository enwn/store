<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

          <com.youth.banner.Banner
              android:layout_width="match_parent"
              android:layout_height="300dp"
              android:id="@+id/home_infor_ban"
              >

          </com.youth.banner.Banner>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="30天无忧退货               48小时快速退款                    满88元包邮费                "
               android:layout_alignParentBottom="true"
               />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_infor_xinxi_tv1"
            android:text="hha"
            android:textSize="@dimen/dp_25"
            android:layout_marginTop="10dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_infor_xinxi_tv2"
            android:text="hha"
            android:textSize="@dimen/dp_15"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_infor_xinxi_tv3"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/price"
            android:layout_marginTop="@dimen/dp_20"
            android:text="hha"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_infor_xinxi_tv4"
            android:textSize="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="hha"
            android:gravity="center"
            />


    <Button
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/dp_20"
              android:layout_height="wrap_content"
              android:text="请选择规格数量"
              android:textSize="@dimen/dp_20"
              android:background="#FFFFFF"
              />
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_20"
               android:orientation="horizontal">
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="评论"
                   android:textSize="@dimen/dp_20"
                   android:id="@+id/home_infor_pinglun_tv"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="查看全部>"
                   android:textSize="@dimen/dp_20"
                   android:id="@+id/home_infor_pinglun_btn"
                   android:layout_alignParentRight="true"
                   />
           </RelativeLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/dp_15"

               >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:id="@+id/home_infor_pinglun_img"

                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/home_infor_pinglun_name"
                       android:layout_marginLeft="@dimen/dp_20"
                       android:text="sjsjsj"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/home_infor_pinglun_time"
                       android:layout_alignParentRight="true"
                       android:text="sjsjsj"
                       />



               </RelativeLayout>





           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/home_infor_pinglun_infor"
               android:text="jsjsjjs"
               android:layout_marginTop="20dp"
               />
           <ImageView
               android:layout_marginTop="20dp"
               android:layout_width="100dp"
               android:layout_height="100dp"
                android:id="@+id/homme_infor_pinglun_img2"
               />


       </LinearLayout>



       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="商品参数"
           android:textSize="@dimen/dp_25"
           />
        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_infor_canshu"
            android:gravity="center"
            tools:ignore="WebViewLayout">

        </WebView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="——常见问题——"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_25"
        android:textSize="@dimen/dp_20"
        />
       <android.support.v7.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/home_infor_question_ry"
           >

       </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="——大家都在看——"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:textSize="@dimen/dp_20"
            />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/home_infor_dajia_ry"
            >

        </android.support.v7.widget.RecyclerView>



    </LinearLayout>
   </ScrollView>

</LinearLayout>
